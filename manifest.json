{
  "manifest_version": 2,
  "name": "SignalFX",
  "description": "SignalFX ",
  "version": "1.0.0",
  "icons": {
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "SignalFX"
  },
  "permissions": [ 
    "<all_urls>",
    "activeTab",
    "notifications",
    "tabs",
    "management",
    "http://localhost:8080/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "socket.io.js",
      "aes.js",
      "background.js"
    ]
  }
}